<Application x:Class="URLShortener.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
		<sys:String x:Key="selectService">_Select your favourite service:</sys:String>
		<sys:String x:Key="longUrl">The long _URL you would like to shorten:</sys:String>
		<sys:String x:Key="shortenUrl">Shorten that URL!</sys:String>
		<sys:String x:Key="shortenedUrl">Your shortened URL</sys:String>
		<sys:String x:Key="copyToClipboard">Copy URL to clipboard</sys:String>
		
		<sys:String x:Key="errorFillInUrl">Please fill in a URL</sys:String>
		<sys:String x:Key="errorShortenUrl">Something went wrong when shortening the URL. Make sure you have internet connection and you've provided a valid URL.</sys:String>
    </Application.Resources>
</Application>
